<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233248">

    <Button
        android:id="@+id/upload_btn_select_file"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/button"
        android:text="Select File"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upload_btn_proceed"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="146dp"
        android:background="@drawable/button"
        android:text="Proceed"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_file" />

    <TextView
        android:id="@+id/textView_file"
        android:layout_width="322dp"
        android:layout_height="209dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="79dp"
        android:text="Not File is Selected"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_btn_select_file" />

</androidx.constraintlayout.widget.ConstraintLayout>